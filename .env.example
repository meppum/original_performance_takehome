# Copy to `.env` and fill in your key. Never commit `.env`.
OPENAI_API_KEY=

# Optional OpenAI request tuning (defaults shown):
# OPENAI_ORG=
# OPENAI_PROJECT=
# OPENAI_RESPONSES_ENDPOINT=https://api.openai.com/v1/responses
# OPENAI_HTTP_OPEN_TIMEOUT=30
# OPENAI_HTTP_READ_TIMEOUT=600
# OPENAI_HTTP_MAX_ATTEMPTS=5
# OPENAI_HTTP_BACKOFF_BASE=1
# OPENAI_HTTP_BACKOFF_MAX=30
# OPENAI_BACKGROUND_POLL_INTERVAL=60
# OPENAI_BACKGROUND_POLL_TIMEOUT=14400
# OPENAI_BACKGROUND_PROGRESS_EVERY=60
#
# Expensive retry budget for planner POSTs (each attempt creates a new OpenAI request):
# OPENAI_PLANNER_MAX_ATTEMPTS=1
#
# Hard cap on planner generation (includes reasoning + visible tokens). Helps avoid runaway xhigh calls:
# OPENAI_PLANNER_MAX_OUTPUT_TOKENS=8000

# Quick live smoke test tip (avoids waiting 60s for first poll):
# OPENAI_BACKGROUND_POLL_INTERVAL=5
